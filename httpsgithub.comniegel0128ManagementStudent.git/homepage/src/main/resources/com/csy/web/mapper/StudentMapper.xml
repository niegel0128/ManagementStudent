<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csy.web.mapper.StudentMapper">
   <insert id="insert" parameterType="com.csy.web.student.StudentBean">
	INSERT INTO student(
		s_id
		,s_name
		,s_password
		,s_tel
		,s_email
		,s_use_yn
		,s_profile_img
		,s_role
		,s_uid) 
	values (
		#{id}
		,#{name}
		,#{password}
		,#{tel}
		,#{email}
		,'y'
		,#{profileImg}
		,'1'
		,date_format(now(),'%Y%m%d%H%i%s%f'));
   </insert>
   <select id="login" resultType="com.csy.web.student.StudentBean" parameterType="com.csy.web.student.StudentBean">
      SELECT 
       s_id as id
      ,s_password as password
       FROM student
      WHERE s_id = #{id} AND s_password = #{password}
   </select>
   <select id="count" resultType="int">
       SELECT count(*) FROM student
   </select>
   <select id="selectAll" resultType="com.csy.web.student.StudentBean">
       SELECT * FROM student
   </select>
   <select id="selectByName" resultType="com.csy.web.student.StudentBean" parameterType="com.csy.web.student.StudentBean">
       SELECT * FROM student
       WHERE s_name = #{name}
   </select>
   <select id="selectById">
       SELECT * FROM = student
       WHERE s_id = #{id}
   </select>
   <update id="update" parameterType="com.csy.web.student.StudentBean" >
	UPDATE student 
	SET s_password = #{password},
		s_profile_img = #{profileImg},	
		s_name = #{name},
		s_tel = #{tel},
		s_email = #{email}	
	WHERE s_id = #{id}
   </update>
   <delete id="delete" parameterType="com.csy.web.student.StudentBean">
       UPDATE student 
       SET s_use_yn = 'y'
       where s_id = #{id}
   </delete>
</mapper>							